<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:text="Recommendations"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/recommendations_get_documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Get Recommended Documents"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/recommendations_get_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Get Recommended Categories"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/recommendations_get_sites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Get Recommended Sites"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/recommendations_impression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Mark viewed recomendations"
            android:textAllCaps="false"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/recommendations_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>


    </LinearLayout>


</FrameLayout>
